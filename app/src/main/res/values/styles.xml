<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="FloatView">
        <attr name="parentViewBackground" format="reference" />
        <attr name="childViewBackground" format="reference" />
        <attr name="childTextColor" format="color" />
        <attr name="defaultViewText" format="string" />
        <attr name="chidTextSize" format="dimension" />
    </declare-styleable>

</resources>
