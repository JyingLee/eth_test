<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/token_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接合约中..." />


        <ProgressBar
            android:id="@+id/token_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/token_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看合约信息" />

            <Button
                android:id="@+id/token_copy_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制当前钱包地址" />
        </LinearLayout>

        <TextView
            android:id="@+id/token_contract_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/token_check_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看总的代币量" />

            <TextView
                android:id="@+id/token_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/token_check_my_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看我的代币余额" />

            <TextView
                android:id="@+id/token_my_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/token_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从主合约获取100个代币" />

        <TextView
            android:id="@+id/token_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账交易:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/token_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="接收代币方to" />

        <EditText
            android:id="@+id/token_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="数量"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/token_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易发送" />

            <Button
                android:id="@+id/token_paste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粘贴发币方地址到to" />
        </LinearLayout>

        <TextView
            android:id="@+id/token_gas_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>